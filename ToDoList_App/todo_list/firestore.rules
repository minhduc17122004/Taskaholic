rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Quy tắc bảo mật cho collection users
    match /users/{userId} {
      // Chỉ cho phép đọc/ghi nếu userId trùng với ID của người dùng đăng nhập
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Quy tắc cho collection tasks của mỗi user
      match /tasks/{taskId} {
        // Chỉ cho phép đọc/ghi nếu userId trùng với ID của người dùng đăng nhập
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Không cho phép truy cập vào các collection khác
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 